#!/usr/bin/env node

/**
 * Module dependencies.
 */

var app = require('../app');
var debug = require('debug')('chat-app:server');
var http = require('http');

/**
 * Get port from environment and store in Express.
 */

var port = normalizePort(process.env.PORT || '3000');
app.set('port', port);

/**
 * Create HTTP server.
 */

var server = http.createServer(app);
const { Server } = require("socket.io");
const io = new Server(server);
const rooms = {}; // Stores { roomName: { ttl: seconds, validation: encryptedString } }

setInterval(() => {
  for (const roomName in rooms) {
    if (rooms[roomName].ttl > 0) {
      rooms[roomName].ttl -= 1;
    }
  }
}, 1000);

io.on("connection", (socket) => {
  socket.emit("initial-room-list", rooms);

  socket.on("create-room", ({ roomName, ttl, validation }) => {
    if (!rooms[roomName]) {
      // Store the validation string provided by the creator
      rooms[roomName] = { ttl: ttl, validation: validation };
      
      io.emit("new-room-created", { roomName, ttl, validation });

      if (ttl > 0) {
        setTimeout(() => {
          delete rooms[roomName];
          io.emit("room-destroyed-globally", roomName);
        }, ttl * 1000);
      }
    }
  });

  socket.on("join-room", (roomName) => {
    socket.join(roomName);
  });

  socket.on("leave-room", (roomName) => {
    socket.leave(roomName);
  });
  
  socket.on('send-chat-message', (data) => {
    const messageObject = {
      room: data.room,
      name: data.name,
      message: data.message,
      time: new Date().toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' }),
      id: socket.id
    };
    io.to(data.room).emit("chat-message", messageObject);
  });
});
/**
 * Listen on provided port, on all network interfaces.
 */

server.listen(port,'0.0.0.0');
server.on('error', onError);
server.on('listening', onListening);

/**
 * Normalize a port into a number, string, or false.
 */

function normalizePort(val) {
  var port = parseInt(val, 10);

  if (isNaN(port)) {
    // named pipe
    return val;
  }

  if (port >= 0) {
    // port number
    return port;
  }

  return false;
}

/**
 * Event listener for HTTP server "error" event.
 */

function onError(error) {
  if (error.syscall !== 'listen') {
    throw error;
  }

  var bind = typeof port === 'string'
    ? 'Pipe ' + port
    : 'Port ' + port;

  // handle specific listen errors with friendly messages
  switch (error.code) {
    case 'EACCES':
      console.error(bind + ' requires elevated privileges');
      process.exit(1);
      break;
    case 'EADDRINUSE':
      console.error(bind + ' is already in use');
      process.exit(1);
      break;
    default:
      throw error;
  }
}

/**
 * Event listener for HTTP server "listening" event.
 */

function onListening() {
  var addr = server.address();
  var bind = typeof addr === 'string'
    ? 'pipe ' + addr
    : 'port ' + addr.port;
  debug('Listening on ' + bind);
}
